body
  background-color #f5f5f5
  padding-bottom 40px

.well
  background-color #fff
  padding 14px
  border 1px solid #e5e5e5
  -webkit-border-radius 5px
  margin-bottom 12px
  -moz-border-radius 5px
  border-radius 5px
  -webkit-box-shadow 0 1px 2px rgba(0,0,0,.05)
  -moz-box-shadow 0 1px 2px rgba(0,0,0,.05)
  box-shadow 0 1px 2px rgba(0,0,0,.05)

.container
  width 280px

.top-nav
  margin-top 12px
  margin-bottom 12px
  padding-left 8px
  padding-right 8px

.muted
  font-weight bold
  font-size 1.1em

.muted a
  color #999

.muted a:hover
  text-decoration none

h3.content
  margin-bottom 4px

#doing
  display block
  margin-left auto
  margin-right auto
  width 240px
  margin-bottom 0px

.nav
  margin-top 7px
  padding-right 5px

.tags
  margin-top 50px
  margin-left -45px
  color #777
  font-size .8.9em

#start-timer
  display none

#clock
  text-align center
  margin-top 25px
  font-size 5.5em

.interruption
  font-size 1.2em
  line-height 2.3em
  display inline
  vertical-align -2px

h2
  margin-bottom 10px

hr.no-top
  margin-top 0px

.spacer 
  margin-top 30px

.time-left
  color #777

.timer
  padding-bottom 15px

.error
  color #FF2602

.gray
  display inline
  color #999

.form-signin .form-signin-heading,.form-signin .checkbox
  margin-bottom 10px

.form-signin input[type="text"],form-signin input[type="password"]
  font-size 16px
  height auto
  margin-bottom 15px
  padding 7px 9px

.delete
  color #aaa
  margin-left 4px

h4
  font-weight normal
  font-size 1.1em

.small
  display inline
  font-size .8em

form.form-inline
  margin-bottom 0px

.login-buttons
  margin-top 4px

h2
  font-size 1.2em
  border-bottom 1px solid #eee

h3
  font-size 1.1em
  padding-bottom 0

.noline
  border 0

.footer
  padding-left 6px
  margin-top -4px
  font-size .9em
  color #999

.sign-up-welcome
  margin-top 35px
  text-align center
  margin-bottom 20px
  font-size 1.4em

p.welcome
  margin-top 30px
  font-size 1.2em

.well img
  background-color #f8f8ff
  display block
  margin-left auto
  margin-right auto
  margin-top 20px
  padding 6px
  border 1px #ccc solid

h1
  font-size 1.7em
